<!-- Main Wide -->

{% block main_wide %}
  <div class="content col-large-1-1">
    <div class="content-box">
      <div class="content-item">
        <h1 class="extra-large text-center pink-500-cl no-margin">{{ page.header.title }}</h1>
      </div>
      {% if page.header.cover_image != "" %}
        <div class="content-item">
          {% for asset in page.header.cover_image %}
            <img src="{{ asset.path }}" title="{{ site.title }}" alt="Image :: {{ site.title }}"/>
          {% endfor %}
          ljlsjf ljs lfj lskdj fkld
        </div>
      {% endif %}
      <div class="content-item">
        {{ page.content|raw }}
      </div>
      {% if page.media.images != "" %}
        <div class="separator small left"></div>
        {% for image in page.media.images %}
          <div class="content-item col-large-3-1">
            {{ image.lightbox(1024,768).cropZoom(100,50).html() }}
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
{% endblock %}
